
public class Container {
	private static int size=0;
	
	public static int getSize(){
		return size;
	}
	
	synchronized public void get() throws InterruptedException{
		while(size==0){
			this.wait();
		}
		size=0;
		this.notify();
	}
	
	synchronized public  void put() throws InterruptedException{
		while(size==1){
			this.wait();
		}
		size=1;
		this.notify();
	}
	
	
}
