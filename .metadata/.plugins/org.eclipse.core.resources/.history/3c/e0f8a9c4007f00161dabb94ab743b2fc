package com.barclays;

public class Person {
	//DATA MEMBERS
	private java.lang.String name;
	private int age;
	
	public static int count;
	//MEMBER METHODS
	
	public Person() {
		name = "NOt Avaail";
		age = 23;
	}
	
	public String getName(){
		return name;
	}
	
	public Person(java.lang.String name, int age) {
		this.name = name;
		this.age = age;
	}

	public int getAge(){
		return age;
	}
	
	public static int getCount(){
		return count;
	}
}
